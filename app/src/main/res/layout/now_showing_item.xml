<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="show"
            type="com.bdjobsniloy.movieapp.model.NowShowing.Movie" />
    </data>

    <RelativeLayout

        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/NowShowing"
            android:layout_width="197dp"
            android:layout_height="323dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/NowPlayingImage"
                android:layout_width="188dp"
                android:layout_height="250dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/loading"
                app:setImageUrl="@{show.poster_path}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="@{show.title}"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Now Showing" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/star_icon" />

                <TextView
                    android:layout_width="151dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:textColor="#555"
                    android:textSize="16sp"
                    app:setRating="@{show.vote_average}"
                    tools:text="9.1/10 IMDb" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</layout>